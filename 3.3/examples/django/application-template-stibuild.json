{
  "kind": "Template",
  "apiVersion": "v1beta1",
  "labels": {
    "template": "application-template-stibuild"
  },
  "metadata": {
    "name": "django-demo-application",
    "annotations": {
      "description": "This example shows how to create a simple Django application in OpenShift Origin v3",
      "tags": "python,django,postgres",
      "iconClass" : "icon-python"
    }
  },
  "items": [
    {
      "kind": "Service",
      "id": "frontend",
      "apiVersion": "v1beta1",
      "containerPort": 8080,
      "port": 5432,
      "selector": {
        "name": "frontend"
      },
      "metadata": {
        "annotations": {
          "description": "Exposes and load balances the Django app instances."
        }
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1beta1",
      "metadata": {
        "name": "django-example",
        "annotations": {
          "description": "Augments the Docker registry, keeps track of image changes for the Django app."
        }
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1beta1",
      "metadata": {
        "name": "python-33-centos7",
        "annotations": {
          "description": "Augments the Docker registry, keeps track of image changes for Python base image."
        }
      },
      "spec": {
        "dockerImageRepository": "openshift/python-33-centos7"
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1beta1",
      "metadata": {
        "name": "django-example-build",
        "labels": {
          "name": "django-example-build"
       },
       "annotations": {
         "description": "Defines how to build the Django app."
       }
      },
      "parameters": {
        "strategy": {
          "type": "STI",
          "stiStrategy": {
            "image": "openshift/python-33-centos7"
          }
        },
        "source": {
          "type": "Git",
          "git": {
            "uri": "git://github.com/openshift/sti-python.git"
          },
          "contextDir": "3.3/examples/django"
        },
        "output": {
          "to": {
            "name": "django-example"
          }
        }
      },
      "triggers": [
        {
          "type": "imageChange",
          "imageChange": {
            "from": {
              "name": "python-33-centos7"
            },
            "image": "openshift/python-33-centos7",
            "tag": "latest"
          }
        },
        {
          "type": "github",
          "github": {
            "secret": "secret101"
          }
        },
        {
          "type": "generic",
          "generic": {
            "secret": "secret101"
          }
        }
      ]
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1beta1",
      "metadata": {
        "name": "frontend",
        "labels": {
          "name": "frontend-rc"
        },
        "annotations": {
          "description": "Defines how to deploy the Django app."
        }
      },
      "template": {
        "controllerTemplate": {
          "replicaSelector": {
            "name": "frontend"
          },
          "replicas": 1,
          "podTemplate": {
            "labels": {
              "name": "frontend"
            },
            "desiredState": {
              "manifest": {
                "version": "v1beta1",
                "containers": [
                  {
                    "name": "django-demo",
                    "image": "django-example",
                    "ports": [
                      {
                        "containerPort": 8080
                      }
                    ],
                    "env": [
                      {
                        "name": "APP_MODULE",
                        "value": "${APP_MODULE}"
                      },
                      {
                        "name": "DJANGO_SECRET_KEY",
                        "value": "${DJANGO_SECRET_KEY}"
                      },
                      {
                        "name": "POSTGRESQL_DATABASE",
                        "value": "${POSTGRESQL_DATABASE}"
                      },
                      {
                        "name": "POSTGRESQL_USER",
                        "value": "${POSTGRESQL_USER}"
                      },
                      {
                        "name": "POSTGRESQL_PASSWORD",
                        "value": "${POSTGRESQL_PASSWORD}"
                      }
                    ]
                  }
                ]
              }
            }
          }
        },
        "strategy": {
          "type": "Recreate",
          "recreateParams": {
            "pre": {
              "failurePolicy": "Abort",
              "execNewPod": {
                "containerName": "django-demo",
                "command": [
                  "/bin/true"
                ]
              }
            },
            "post": {
              "failurePolicy": "Ignore",
              "execNewPod": {
                "containerName": "django-demo",
                "command": [
                  "/bin/false"
                ]
              }
            }
          }
        }
      },
      "triggers": [
        {
          "type": "ImageChange",
          "imageChangeParams": {
            "automatic": true,
            "containerNames": [
              "django-demo"
            ],
            "from": {
              "name": "django-example"
            },
            "tag": "latest"
          }
        }
      ]
    },
    {
      "kind": "Service",
      "id": "database",
      "apiVersion": "v1beta1",
      "containerPort": 5432,
      "port": 5434,
      "selector": {
        "name": "database"
      },
      "metadata": {
        "annotations": {
          "description": "Exposes the database server."
        }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1beta1",
      "metadata": {
        "name": "database",
        "annotations": {
          "description": "Defines how to deploy the database."
        }
      },
      "template": {
        "controllerTemplate": {
          "replicaSelector": {
            "name": "database"
          },
          "replicas": 1,
          "podTemplate": {
            "labels": {
              "name": "database"
            },
            "desiredState": {
              "manifest": {
                "version": "v1beta1",
                "containers": [
                  {
                    "name": "django-demo-database",
                    "image": "openshift/postgresql-92-centos7",
                    "ports": [
                      {
                        "containerPort": 5432
                      }
                    ],
                    "env": [
                      {
                        "name": "POSTGRESQL_USER",
                        "value": "${POSTGRESQL_USER}"
                      },
                      {
                        "name": "POSTGRESQL_PASSWORD",
                        "value": "${POSTGRESQL_PASSWORD}"
                      },
                      {
                        "name": "POSTGRESQL_DATABASE",
                        "value": "${POSTGRESQL_DATABASE}"
                      }
                    ]
                  }
                ]
              }
            }
          }
        },
        "strategy": {
          "type": "Recreate"
        }
      },
      "triggers": [
        {
          "type": "ConfigChange"
        }
      ]
    }
  ],
  "parameters": [
    {
      "description": "Django WSGI application",
      "name": "APP_MODULE",
      "value": "demo.wsgi"
    },
    {
      "description": "Django secret key",
      "name": "DJANGO_SECRET_KEY",
      "generate": "expression",
      "from": "[\\w]{50}"
    },
    {
      "description": "database name",
      "name": "POSTGRESQL_DATABASE",
      "value": "django_demo"
    },
    {
      "description": "database username",
      "name": "POSTGRESQL_USER",
      "generate": "expression",
      "from": "user[A-Z0-9]{3}"
    },
    {
      "description": "database password",
      "name": "POSTGRESQL_PASSWORD",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{8}"
    }
  ]
}
